@model LOWEN.Models.tblConfig
<div id="top">
    <div id="contentTop">
        <div id="location">
            <a title="" class="select">
                <i class="fa fa-globe" aria-hidden="true"></i>
                Lowen Việt Nam <i class="fa fa-angle-down" aria-hidden="true"></i>
            </a>
        </div>
        <div id="hotlineTop">
            <span><i class="fa fa-phone-square" aria-hidden="true"></i> Hỗ trợ khách hàng : <strong>@Model.Hotline1 </strong></span>
        </div>
        <div id="menuTop">
            <ul>
                <li><a href="/" title="Trang chủ"><i class="fa fa-home" aria-hidden="true"></i> Trang chủ</a></li>
                <li><a href="/tin-tuc" title="tin tức"><i class="fa fa-file-text-o" aria-hidden="true"></i> Tin tức</a></li>
                <li><a href="/tuyen-dung" title="tuyển dụng"><i class="fa fa-user" aria-hidden="true"></i> Tuyển dụng</a></li>
                <li><a href="/lien-he" title="Liên hệ"><i class="fa fa-question-circle" aria-hidden="true"></i> Liên hệ</a></li>
            </ul>
        </div>
    </div>
</div>
<div id="banner">
    <div id="contentBanner">
        <div id="menuLeft">
            <ul class="ul1">
                <li class="li1"><a href="#" title="Sản phẩm">Sản phẩm</a>
                    <ul class="ul2">
                        <li><a href="/san-pham-dong-bo" title="sản phẩm theo bộ Lowen">Sản phẩm Lowen theo bộ</a></li>
                        @Html.Raw(ViewBag.result)
                       
                    </ul>
                </li>
                <li class="li1"><a href="#" title="Dịch vụ">Dịch vụ</a>
                    <ul class="ul2">
                        <li><a href="/news/chinh-sach-bao-hanh-san-pham-thiet-bi-ve-sinh-lowen" title="Bảo hành sản phẩm">Bảo hành</a></li>
                        <li><a href="/news/chinh-sach-van-chuyen-lap-dat" title="Chính sách vận chuyển lắp đặt">Vận chuyển và lắp dặt</a></li>
                        <li><a href="/news/chinh-sach-doi-tra-hang" title="Chính sách đổi trả hàng">Chính sách đổi trả hàng</a></li>
                    </ul>
                </li>
                <li class="li1"><a href="/he-thong-phan-phoi" title="Hệ thống phân phối">Hệ thống phân phối</a></li>
            </ul>
        </div>
        <div id="logo">
            <a href="/" title="Lowen"><img src="@Model.Logo" alt="Lowen" /></a>
            <span>@Model.Slogan</span>
        </div>
        <div id="menuRight">
            <ul class="ul1">
                <li class="li1"><a href="/khuyen-mai" title="Bản tin khuyến mại Lowen" style="color:#ff0000">Khuyến mại</a></li>
            </ul>
            <div id="boxSearch">
                <div class="boxSearch">
                    @using (Html.BeginForm("CommandSearch", "default", FormMethod.Post))
                    {
                        <input type="search" name="txtSearch" id="txtSearch" class="txtSearch" placeholder="Search" />
                        <button type="submit" id="btnSubmit" class="btnSearch" name="btnSubmit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    }
                </div>
            </div>
            <div id="order">
                <a href="/gio-hang" class="orderDetail" title="giỏ hàng">
                    <i class="fa fa-cart-plus" aria-hidden="true"></i>
                    @if (Session["soluong"] != "" && Session["soluong"] != null)
                    {
                    <span class="orderCount">@Session["soluong"].ToString()</span>
                    }
                    else
                    {
                        <span class="orderCount">0</span>

                    }
                </a>
            </div>
        </div>
    </div>
</div>